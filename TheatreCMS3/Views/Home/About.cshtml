@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* GLOBAL FOR THIS PAGE ONLY */
    body {
        background-color: #000;
    }

    .about-wrapper {
        text-align: center;
        color: #ffffff;
        font-family: 'Oswald', Arial, sans-serif;
    }

    .about-band {
        width: 100%;
        margin: 0;
        padding: 40px 15px;
        position: relative; /* <-- add this line */
    }

    /* HERO SECTION */
    .about-hero {
    background: url('@Url.Content("~/Content/images/theater.jpg")') center center no-repeat;
    background-size: cover;
    padding: 120px 15px 80px;
    font-family: 'broadway', 'Times New Roman', serif;
    font-size: 48px;
    letter-spacing: 2px;
    text-shadow: 0 2px 6px rgba(0,0,0,0.7);
    }

    /* BLACK + CORAL BANDS */
    .about-band--black {
        background-color: #000000;
    }

    .about-band--coral {
        background-color: #ff5a5a;
        color: #ffffff;
    }

    .about-band h2 {
        text-transform: uppercase;
        font-size: 20px;
        letter-spacing: 2px;
        margin-bottom: 15px;
    }

    .about-band--coral p,
    .about-band--black p {
        max-width: 750px;
        margin: 0 auto 10px;
        font-size: 14px;
        line-height: 1.5;
    }

    .about-history-inner {
        max-width: 800px;
        margin: 0 auto;
    }

    /* ENSEMBLE ROW */
    .about-ensemble-images {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 30px;
        margin-top: 30px;
    }

        .about-ensemble-images img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #ffffff;
        }

    .about-ensemble-name {
        margin-top: 8px;
        font-size: 12px;
    }

    /* BOARD SECTION */
    .about-board-list {
        margin-top: 10px;
        font-size: 14px;
        line-height: 1.6;
    }

    /* AUTO-WIDTH UNDERLINE THAT MATCHES THE TEXT */
    .about-section-title {
        display: inline-block;
        position: relative;
        padding-bottom: 8px;
    }

        .about-section-title::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%; /* makes the underline match text width */
            height: 4px;
            background-color: #b30000; /* dark red */
            border-radius: 2px;
        }

    /* Curved top effect for colored bands */
    .about-band--curved-top::before {
        content: '';
        position: absolute;
        top: -40px; /* how tall the curve overlaps */
        left: 0;
        right: 0;
        height: 40px;
        background: inherit; /* use the same color as the band */
        border-bottom-left-radius: 50% 100%;
        border-bottom-right-radius: 50% 100%;
    }

    /* White divider line between Ensemble and Board */
    .about-divider {
        height: 2px;
        background-color: #ffffff;
        width: 80%;
        margin: 0 auto;
    }

</style>

<div class="about-wrapper">

    <!-- HERO / TITLE -->
    <section class="about-band about-hero">
        <h1>About Us</h1>
    </section>

    <!-- WHO WE ARE -->
    <section class="about-band about-band--black">
        <h2 class="about-section-title">Who We Are</h2>
        <p>
            To engage audiences through ensemble-driven productions with a focus on developing new works.
        </p>
    </section>

    <!-- COMPANY HISTORY -->
    <section class="about-band about-band--coral about-band--curved-top">
        <div class="about-history-inner">
            <h2 class="about-section-title">Company History</h2>

            <p>
                In 1997, Theatre Vertigo was founded by Paul Floding, Nanette Pettit and Jeff Meyers.
                Since then, Theatre Vertigo has performed in numerous spaces including The Russell Street Theater,
                The Electric Company, Theater!Theatre!, and The Shoebox Theater.
            </p>

            <p>
                From 2003 to 2014, Theatre Vertigo produced Anonymous Theatre as a summer fundraiser in collaboration
                with The Anonymous Theatre Company. Other past collaborations include defunkt theatre, Stark Raving Theater,
                and Tears of Joy Theatre.
            </p>

            <p>
                Theatre Vertigo has worked on world premieres including <em>Faust.Us</em> by Joseph Fisher,
                and <em>The End of Sex</em> by Craig Jessen.
            </p>

            <p>
                In 2016, Theatre Vertigo produced its first officially commissioned work from a playwright,
                <em>I Want To Destroy You</em>, by Rob Handel.
            </p>
        </div>
    </section>

    <!-- ENSEMBLE -->
    <section class="about-band about-band--black about-band--curved-top">
        <h2 class="about-section-title">Ensemble</h2>

        <div class="about-ensemble-images">

            <div>
                <img src="@Url.Content("~/Content/images/Profile_1.jpg")" alt="Tom Mounsey" />
                <div class="about-ensemble-name">Tom Mounsey</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_2.jpg")" alt="Kaia Maarja Hiller" />
                <div class="about-ensemble-name">Kaia Maarja Hiller</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_3.jpg")" alt="Heath Hyun Houghton" />
                <div class="about-ensemble-name">Heath Hyun Houghton</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_5.jpg")" alt="Jacquelle Davis" />
                <div class="about-ensemble-name">Jacquelle Davis</div>
            </div>

            <div>
                <img src="@Url.Content("~/Content/images/Profile_4.jpg")" alt="Victoria Alvarez-Chacon" />
                <div class="about-ensemble-name">Victoria Alvarez-Chacon</div>
            </div>

        </div>
    </section>

    <!-- white divider between Ensemble and Board -->
    <div class="about-divider"></div>

    <!-- BOARD -->
    <section class="about-band about-band--black about-band--curved-top">
        <h2 class="about-section-title">Board</h2>

        <div class="about-board-list">
            <div>Jamie Floyd (President)</div>
            <div>Marcia Reyes</div>
            <div>Lena Liis-Kiesel</div>
        </div>
    </section>
</div>
